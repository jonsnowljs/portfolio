{
  "fullScreen": {
    "enable": true,
    "zIndex": 100
  },
  "fpsLimit": 60,
  "particles": {
    "number": {
      "value": 100
    },
    "color": {
      "value": "#ff0000",
      "animation": {
        "enable": true,
        "speed": 180,
        "sync": true
      }
    },
    "shape": {
      "type": ["circle", "square", "star", "polygon", "line"]
    },
    "opacity": {
      "value": 1
    },
    "size": {
      "value": { "min": 1, "max": 5 },
      "animation": {
        "enable": true,
        "speed": 5,
        "minimumValue": 1,
        "sync": true,
        "startValue": "min",
        "count": 1
      }
    },
    "move": {
      "enable": true,
      "speed": { "min": 10, "max": 20 },
      "direction": "top",
      "random": false,
      "straight": false,
      "outMode": "destroy",
      "gravity": {
        "enable": true
      }
    }
  },
  "interactivity": {
    "detectsOn": "window",
    "events": {
      "onclick": {
        "enable": true,
        "mode": ["trail"],
        "type": ["circle", "square", "star", "polygon", "line"]
      },
      "onHover": {
        "enable": true,
        "mode": ["repulse"]
      },
      "onDiv": {
        "enable": true,
        "mode": ["bounce"],
        "selectors": [".separator", ".about-photo", ".about-info"]
      },
      "resize": true
    },
    "modes": {
      "trail": {
        "delay": 0.1,
        "quantity": 8
      }
    }
  },
  "detectRetina": true
}
